    "intake": {
      "new_client_name": "",
      "initial_configuration": {
        "llm": "OpenAI GPT-5 (reasoning)",
        "agent_tool": "Atlas Browser Agent",
        "creative_tool": "Google Veo 3.1"
      },
      "switch_options": {
        "llm": [
          "OpenAI GPT-5 (reasoning)",
          "Anthropic Claude Opus 4.5",
          "Google Gemini 2.0 Pro",
          "OpenAI GPT-4.1 (fallback)"
        ],
        "agent_tool": [
          "Atlas Browser Agent",
          "Playwright Runner",
          "Supabase Queue Worker",
          "Zapier MCP Connector"
        ],
        "creative_tool": [
          "Google Veo 3.1",
          "OpenAI Sora 2",
          "Runway Gen-3",
          "Midjourney V7"
        ]
      },
      "workflow": {
        "steps": [
          {
            "id": "step_name",
            "label": "Client name",
            "type": "text_input",
            "required": true
          },
          {
            "id": "step_config",
            "label": "Initial agent configuration",
            "type": "triple_selector",
            "required": true,
            "fields": ["llm", "agent_tool", "creative_tool"],
            "swap_behavior": "Each selector is swappable per client; changes persist per-project and are audit-logged."
          },
          {
            "id": "step_assets",
            "label": "Seed assets",
            "type": "file_drop + url_import",
            "required": false,
            "accepted": ["pdf", "png", "jpg", "mp4", "zip", "md"],
            "mock_examples": [
              "mock://intake/examples/brand-guidelines.pdf",
              "mock://intake/examples/logo-pack.zip",
              "mock://intake/examples/hero-video.mp4"
            ]
          },
          {
            "id": "step_governance",
            "label": "Governance preset",
            "type": "preset_picker",
            "required": true,
            "options": [
              "Strict (enterprise)",
              "Standard (brand teams)",
              "Fast (exploration)"
            ]
          },
          {
            "id": "step_confirm",
            "label": "Create project",
            "type": "primary_action",
            "required": true
          }
        ],
        "agentic_onboarding": {
          "enabled": true,
          "behavior": "Upon creation, an onboarding agent runs: creates namespaces, sets thresholds, drafts DNA, and produces a first-run checklist for HITL approval.",
          "outputs": [
            "mock://onboarding/output/dna-draft.md",
            "mock://onboarding/output/gov-rules.json",
            "mock://onboarding/output/first-run-plan.md"
          ]
        }
      }
    },

    "ui_options": {
      "realistic_theme": {
        "hud_style": "Ironman-like transparent panels, rounded rectangles, thin strokes, neon edge highlights, micro-grid overlays, radial dials",
        "panel_material": "glassmorphism (blur + faint noise)",
        "component_library": "shadcn/ui-like controls + custom HUD adornments",
        "mock_asset_refs": {
          "hud_background_overlay": "mock://assets/hud/transparent-grid-overlay.png",
          "arc_elements": "mock://assets/hud/arc-segments.svg",
          "status_glyphs": "mock://assets/hud/status-glyphs.svg",
          "pancake_icon": "mock://assets/icons/pancake-bot.svg"
        },
        "behavior_notes": [
          "Client cards float in a vertical stack; selecting a client expands its panel to show config + latest runs.",
          "A right-side mini-timeline shows run events with timestamps and HITL checkpoints.",
          "A top-left 'Pancake Bot' opens chat; bot can be context-scoped to selected client."
        ]
      }
    },

    "data_model": {
      "supports_overflow": true,
      "overflow_strategy": {
        "type": "virtualized_list",
        "max_visible": 3,
        "navigation": "scroll + search + status filters",
        "grouping": "by status then most recent activity"
      },
      "empty_states": {
        "no_projects": {
          "clients": [],
          "message": "No client projects yet. Use Intake to create your first project.",
          "cta": "Open Intake"
        },
        "missing_fields": {
          "behavior": "Render placeholders (null-safe). If dna or runs missing, show 'Not available' and a 'Retry fetch' action.",
          "placeholders": {
            "agentic_features_workflow": "(no workflow defined)",
            "dna": "(no DNA ingested)",
            "runs": "-",
            "status": "pending",
            "hitl_review_needed": false
          }
        }
      },
      "error_state_schema": {
        "error": {
          "code": "string",
          "message": "string",
          "details": {
            "source": "config|data|network|permissions",
            "client_id": "string or null",
            "retryable": true,
            "timestamp": "ISO-8601"
          }
        }
      }
    },

    "error_handling": {
      "missing_fields": "If any client fields are null/missing, the UI must remain stable: show placeholder copy, visually mark the field as 'unknown', and provide a per-field retry action. Do not block navigation.",
      "project_overflow": "If >3 projects exist, show only 3 as 'pinned' and virtualize the rest in a scrollable list. Add search, status filter chips, and an 'All Projects' drawer.",
      "config_error": {
        "error": {
          "code": "CONFIG_FETCH_FAILED",
          "message": "Could not load agent configuration for selected client.",
          "details": {
            "source": "data",
            "client_id": "client_cylndr",
            "retryable": true,
            "timestamp": "2026-01-15T00:00:00-08:00"
          }
        },
        "ui_behavior": "Show a compact error toast + inline error state in the client panel with a 'Retry' button and a 'View logs' link. Preserve last-known-good config if available."
      }
    }
  }
}
